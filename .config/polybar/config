; Module Defs
[module/workspaces]
    type = internal/xworkspaces
    pin-workspaces = false
    enable-click = false
    enable-scroll = false
    format-padding = 1
    format = <label-state>
    icon-default = "ÔÖº"
    label-active = "ÔÑë"
    label-active-foreground = ${colors.foreground}
    label-active-background = #aa124556
    label-active-padding = 1
    label-occupied = "Ôáé"
    label-occupied-foreground = ${colors.foreground}
    label-occupied-padding = 1
    label-urgent = "ÔÜí"
    label-urgent-foreground = ${colors.foreground}
    label-urgent-padding = 1
    label-empty = "Ôà≠"
    label-empty-foreground = ${colors.foreground}
    label-empty-padding = 1

[module/audio]
    type = internal/pulseaudio
    sink = alsa_output.pci-0000_12_00.3.analog-stereo
    use-ui-max = true
    format-volume = <ramp-volume> <label-volume>
    label-muted = "ÔÄ¶ "
    ramp-volume-0 = "ÔÄß "
    ramp-volume-1 = "ÔÄ® "
    click-right = "pactl set-sink-volume @DEFAULT_SINK@ -1000"
    click-middle = "pavucontrol"
    interval = 5
    label-active-font = 1

[module/microphone]
	type = custom/ipc
	hook-0 = amixer get Capture | grep -i left | grep -i % | awk '"[]" {print $6, $5}' | sed -E 's/\[//g;s/\]//g;s/on/ÔÑ∞ /g;s/off/ÔÑ± /g'
	; exec = amixer get Capture | grep -i left | grep -i % | awk '"[]" {print $5, $6}' | sed -E 's/\[//g;s/\]//g'
	click-left = amixer set Capture toggle | polybar-msg hook microphone 1
	; format-prefix = amixer get Capture | grep -i left | grep -i % | awk '"[]" {print $6}' | sed -E 's/on/ÔÑ∞/g;s/off/ÔÑ±/g'
	scroll-up = amixer set Capture 5%+ | polybar-msg hook microphone 1
	scroll-down = amixer set Capture 5%- | polybar-msg hook microphone 1
	initial = 1

[module/brightness]
	type = custom/ipc
	hook-0 = brightnessctl | grep -i % | awk '{print $4}' | sed -E 's/\(//g;s/\)//g'
	scroll-up = brightnessctl set 5%+ | polybar-msg hook brightness 1
	scroll-down = brightnessctl set 5%- | polybar-msg hook brightness 1
	initial = 1
	format-prefix = "ÔÜÖ "

[module/polybar-windows]
	type = custom/script
	exec = $HOME/.config/polybar/scripts/win.sh
	format = <label>
	label = %output%
	label-padding = 1
	interval = 1

[module/date]
    type = internal/date
    interval = 5
    date = %a, %b %d
    time = %l:%M %p
    label = %{T3}%date%%{T-}  %time%
    background = ${colors.background} 

[module/battery]
    type = internal/battery
    battery = BAT0
    adapter = ADP1
    full-at = 98
    format-charging = <animation-charging> <label-charging>
    format-discharging = <animation-discharging> <label-discharging>
    format-discharging-underline = ${self.format-charging-underline}
    format-full-prefix = "Óà∫ "
    format-full-prefix-foreground = ${colors.foreground}
    format-full-underline = ${self.format-charging-underline}
    ramp-capacity-0 = ÔâÄ
    ramp-capacity-1 = ÔâÄ
    ramp-capacity-2 = ÔâÄ
    ramp-capacity-foreground = ${colors.foreground}
    animation-charging-0 = ÔâÑ
    animation-charging-1 = ÔâÇ
    animation-charging-2 = ÔâÄ
    animation-charging-foreground = ${colors.foreground}
    animation-charging-framerate = 750
    animation-discharging-0 = ÔâÄ
    animation-discharging-1 = ÔâÇ
    animation-discharging-2 = ÔâÑ
    animation-discharging-foreground = ${colors.foreground}
    animation-discharging-framerate = 750

[module/powermenu]
    type = custom/menu
    expand-right = true
    format-spacing = 2
    label-open = "ÔåÉ  "
    label-close = "ÔÑÄ"
