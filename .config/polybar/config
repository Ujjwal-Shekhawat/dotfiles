[module/system-cpu-temppercore]
type = custom/script
exec = sensors | grep Core | awk '{print substr($3, 2, length($3)-5)}' | tr "\\n" " " | sed 's/ /¬∞C  /g' | sed 's/  $//'
interval = 60

[module/pacman]
    type = custom/script
    exec = pacman -Q | wc -l
    interval = 6000
    format-prefix = "ÔÜá: "
    format-underline = #E57899
    format-background = #0f0f0f
    format-padding = 1
    initial = 1

[module/mpd]
	type = internal/mpd
	host = 127.0.0.1
	port = 6601
	interval = 1
